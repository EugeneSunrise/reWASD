<UserControl
	x:Class="reWASDUI.Views.SVGGamepadWithAllAnnotations" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:bindingAnnotation="clr-namespace:reWASDUI.Controls.XBBindingControls.BindingAnnotation" xmlns:bindingFrame="clr-namespace:reWASDUI.Controls.XBBindingControls.BindingFrame" xmlns:buttons="clr-namespace:DiscSoft.NET.Common.View.Controls.Buttons;assembly=DiscSoft.NET.Common" xmlns:controls="clr-namespace:reWASDUI.Controls" xmlns:converters1="clr-namespace:reWASDUI.Utils.Converters" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:dsConverters="clr-namespace:DiscSoft.NET.Common.Utils.Converters;assembly=DiscSoft.NET.Common" xmlns:enums="clr-namespace:reWASDCommon.Infrastructure.Enums;assembly=reWASDCommon" xmlns:keyBindings="clr-namespace:reWASDUI.Infrastructure.KeyBindings" xmlns:local="clr-namespace:XBEliteWPF.Views" xmlns:localization="clr-namespace:DiscSoft.NET.Common.Localization;assembly=DiscSoft.NET.Common" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:recolorableImages="clr-namespace:DiscSoft.NET.Common.View.RecolorableImages;assembly=DiscSoft.NET.Common" xmlns:s="clr-namespace:DTEngine;assembly=DiscSoft.NET.Common" xmlns:view="clr-namespace:DiscSoft.NET.Common.View;assembly=DiscSoft.NET.Common" xmlns:viewModels="clr-namespace:reWASDUI.ViewModels" xmlns:viewModels1="clr-namespace:reWASDUI.ViewModels" xmlns:views="clr-namespace:reWASDUI.Views" xmlns:xbBindingControls="clr-namespace:reWASDUI.Controls.XBBindingControls"
	Control.HorizontalContentAlignment="Left"
	Control.VerticalContentAlignment="Top">
	<Control.Template>
		<ControlTemplate
			TargetType="{x:Type views:SVGGamepadWithAllAnnotations}">
			<FrameworkTemplate.Resources>
				<ResourceDictionary>
					<Style
						x:Key="{x:Type view:SVGElementFakeAttachedButton}"
						BasedOn="{StaticResource {x:Type view:SVGElementFakeAttachedButton}}"
						TargetType="{x:Type view:SVGElementFakeAttachedButton}">
						<Setter
							Property="FrameworkElement.FocusVisualStyle"
							Value="{DynamicResource ButtonFocusVisualStyle}" />
						<Setter
							Property="Control.Template">
							<Setter.Value>
								<ControlTemplate
									TargetType="{x:Type view:SVGElementFakeAttachedButton}">
									<Border
										Border.Background="#00FFFFFF"
										Border.BorderThickness="0"
										UIElement.Focusable="False">
										<ContentPresenter />
										<FrameworkElement.ToolTip>
											<StackPanel
												Orientation="Horizontal">
												<TextBlock
													FrameworkElement.Margin="0,0,5,0"
													FrameworkElement.VerticalAlignment="Center"
													TextBlock.Foreground="{DynamicResource ForegroundColor}"
													TextBlock.Text="{localization:Translate {x:Static s:StringConsts.STR_GAMEPAD_FAKE_BUTTON_TT}, StringFormatRule=div1}" />
												<recolorableImages:RecolorableSVG
													Name="SvgImage"
													Drawing="{DynamicResource SwitchToKeypad}"
													UIElement.Focusable="False" />
												<TextBlock
													FrameworkElement.Margin="0,0,5,0"
													FrameworkElement.VerticalAlignment="Center"
													TextBlock.Foreground="{DynamicResource ForegroundColor}"
													TextBlock.Text="{localization:Translate {x:Static s:StringConsts.STR_GAMEPAD_FAKE_BUTTON_TT}, StringFormatRule=div2}" />
											</StackPanel>
										</FrameworkElement.ToolTip>
									</Border>
								</ControlTemplate>
							</Setter.Value>
						</Setter>
					</Style>
					<Style
						x:Key="{x:Type view:SVGElementAttachedButton}"
						BasedOn="{StaticResource {x:Type view:SVGElementAttachedButton}}"
						TargetType="{x:Type view:SVGElementAttachedButton}">
						<Setter
							Property="AutomationProperties.AutomationId"
							Value="{Binding CommandParameter, RelativeSource={RelativeSource Self}}" />
						<Setter
							Property="Control.Template">
							<Setter.Value>
								<ControlTemplate
									TargetType="{x:Type view:SVGElementAttachedButton}">
									<Border
										Border.Background="#00FFFFFF"
										Border.BorderThickness="0"
										UIElement.Focusable="False">
										<FrameworkElement.ContextMenu>
											<xbBindingControls:CopyPasteClearBindingContextMenu>
												<xbBindingControls:CopyPasteClearBindingContextMenu.XBBinding>
													<MultiBinding
														Converter="{dsConverters:BindToDictionaryWithKeyConverter}">
														<Binding
															Path="GameProfilesService.CurrentGamepadBindingCollection" />
														<Binding
															Path="CommandParameter"
															RelativeSource="{RelativeSource TemplatedParent}" />
													</MultiBinding>
												</xbBindingControls:CopyPasteClearBindingContextMenu.XBBinding>
											</xbBindingControls:CopyPasteClearBindingContextMenu>
										</FrameworkElement.ContextMenu>
										<ContentPresenter />
										<FrameworkElement.ToolTip>
											<xbBindingControls:XBBindingTooltip>
												<xbBindingControls:XBBindingTooltip.XBBinding>
													<MultiBinding
														Converter="{dsConverters:BindToDictionaryWithKeyConverter}">
														<Binding
															Path="GameProfilesService.CurrentGamepadBindingCollection" />
														<Binding
															Path="CommandParameter"
															RelativeSource="{RelativeSource TemplatedParent}" />
													</MultiBinding>
												</xbBindingControls:XBBindingTooltip.XBBinding>
											</xbBindingControls:XBBindingTooltip>
										</FrameworkElement.ToolTip>
									</Border>
								</ControlTemplate>
							</Setter.Value>
						</Setter>
					</Style>
				</ResourceDictionary>
			</FrameworkTemplate.Resources>
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition
						ColumnDefinition.Width="*" />
					<ColumnDefinition
						ColumnDefinition.Width="Auto" />
				</Grid.ColumnDefinitions>
				<StackPanel
					Grid.Column="1"
					FrameworkElement.HorizontalAlignment="Center"
					FrameworkElement.VerticalAlignment="Center"
					Orientation="Vertical"
					UIElement.Visibility="{Binding GameProfilesService.CurrentGamepadBindingCollection, FallbackValue=Collapsed, Converter={dsConverters:ValueIsNotNullToVisibilityConverter}}">
					<buttons:SVGButton
						Name="btnToggleShowGamepadFace"
						ButtonBase.CommandParameter="{StaticResource BooleanFalseValue}"
						HighlightedForeground="{DynamicResource ConfigItemHoverForeground}"
						SVGHeight="36"
						SVGWidth="36"
						ButtonBase.Command="{Binding ShowGamepadCommand}"
						Drawing="{Binding GamepadService.CurrentGamepadFlipToFaceButtonSVGUri}"
						IsTriggered="{Binding GamepadService.IsCurrentGamepadBackShown, Converter={dsConverters:InverseBooleanConverter}}"
						TriggeredForeground="{Binding GameProfilesService.CurrentGamepadBindingCollection.CollectionBrush, FallbackValue='{StaticResource CreamBrush}'}"
						TriggeredHighlightedForeground="{Binding GameProfilesService.CurrentGamepadBindingCollection.CollectionBrush, FallbackValue='{StaticResource CreamBrush}'}">
						<FrameworkElement.Style>
							<Style
								BasedOn="{StaticResource ButtonFlip}"
								TargetType="{x:Type buttons:SVGButton}">
								<Style.Triggers>
									<DataTrigger
										Value="True"
										Binding="{Binding GamepadService.CurrentGamepad.CurrentController.IsEngineControllerControlPad}">
										<Setter
											Property="FrameworkElement.ToolTip"
											Value="{localization:Translate {x:Static s:StringConsts.STR_MAIN_SCREEN}}" />
									</DataTrigger>
									<DataTrigger
										Value="True"
										Binding="{Binding GamepadService.CurrentGamepad.CurrentController.IsAnyAzeron}">
										<Setter
											Property="FrameworkElement.ToolTip"
											Value="{localization:Translate {x:Static s:StringConsts.STR_FRONT_BUTTONS}}" />
									</DataTrigger>
								</Style.Triggers>
								<Style.Setters>
									<Setter
										Property="FrameworkElement.ToolTip"
										Value="{localization:Translate {x:Static s:StringConsts.STR_TT_GAMEPAD_FRONT_BUTTONS}}" />
								</Style.Setters>
							</Style>
						</FrameworkElement.Style>
					</buttons:SVGButton>
					<Border
						UIElement.Visibility="{Binding GameProfilesService.RealCurrentBeingMappedBindingCollection.SubConfigData.IsGamepad, Converter={dsConverters:BooleanToVisibilityConverter}}">
						<buttons:SVGButton
							Name="btnToggleShowGamepadBack"
							ButtonBase.CommandParameter="{StaticResource BooleanTrueValue}"
							HighlightedForeground="{DynamicResource ConfigItemHoverForeground}"
							SVGHeight="36"
							SVGWidth="36"
							ButtonBase.Command="{Binding ShowGamepadCommand}"
							Drawing="{Binding GamepadService.CurrentGamepadFlipToBackButtonSVGUri}"
							IsTriggered="{Binding GamepadService.IsCurrentGamepadBackShown}"
							TriggeredForeground="{Binding GameProfilesService.CurrentGamepadBindingCollection.CollectionBrush, FallbackValue='{StaticResource CreamBrush}'}"
							TriggeredHighlightedForeground="{Binding GameProfilesService.CurrentGamepadBindingCollection.CollectionBrush, FallbackValue='{StaticResource CreamBrush}'}"
							UIElement.Visibility="{Binding GamepadService.CurrentGamepad.CurrentController.ControllerType, Converter={converters1:SupportedGamepadToVisibilityGamepadBackConverter}}">
							<FrameworkElement.Style>
								<Style
									BasedOn="{StaticResource ButtonFlip}"
									TargetType="{x:Type buttons:SVGButton}">
									<Style.Triggers>
										<DataTrigger
											Value="True"
											Binding="{Binding GamepadService.CurrentGamepad.CurrentController.IsEngineControllerControlPad}">
											<Setter
												Property="FrameworkElement.ToolTip"
												Value="{localization:Translate {x:Static s:StringConsts.STR_ADDITIONAL_SCREEN}}" />
										</DataTrigger>
										<DataTrigger
											Value="True"
											Binding="{Binding GamepadService.CurrentGamepad.CurrentController.IsAnyAzeron}">
											<Setter
												Property="FrameworkElement.ToolTip"
												Value="{localization:Translate {x:Static s:StringConsts.STR_SIDE_BUTTONS}}" />
										</DataTrigger>
									</Style.Triggers>
									<Style.Setters>
										<Setter
											Property="FrameworkElement.ToolTip"
											Value="{localization:Translate {x:Static s:StringConsts.STR_TT_GAMEPAD_BACK_BUTTONS}}" />
									</Style.Setters>
								</Style>
							</FrameworkElement.Style>
						</buttons:SVGButton>
					</Border>
					<buttons:SVGButton
						Name="btnToggleShowGamepadKeyboard"
						Drawing="{DynamicResource SwitchToKeypad}"
						HighlightedForeground="{DynamicResource ConfigItemHoverForeground}"
						FrameworkElement.Style="{DynamicResource ButtonFlip}"
						ButtonBase.Command="{Binding ShowGamepadKeypadCommand}"
						ToolTip="{localization:Translate {x:Static s:StringConsts.STR_TT_ADDITIONAL_GAMEPAD_BUTTONS}}" />
					<buttons:SVGButton
						Name="btnToggleShowVirtualKeyboard"
						Drawing="{DynamicResource SwitchToVirtualKeyboard}"
						HighlightedForeground="{DynamicResource ConfigItemHoverForeground}"
						FrameworkElement.Style="{DynamicResource ButtonFlip}"
						ButtonBase.Command="{Binding ShowMouseSettingsCommand}"
						ToolTip="{localization:Translate {x:Static s:StringConsts.STR_TT_VIRTUAL_DEVICES}}" />
					<buttons:SVGButton
						Name="btnToggleShowVibrationSettings"
						Drawing="{DynamicResource SwitchToVibration}"
						HighlightedForeground="{DynamicResource ConfigItemHoverForeground}"
						FrameworkElement.Style="{DynamicResource ButtonFlip}"
						TriggeredForeground="{DynamicResource CreamBrush}"
						TriggeredHighlightedForeground="{DynamicResource CreamBrush}"
						ButtonBase.Command="{Binding ShowVibrationSettingsCommand}"
						ToolTip="{localization:Translate {x:Static s:StringConsts.STR_TT_VIBRATION_SETTINGS}}"
						UIElement.Visibility="{Binding GamepadService.CurrentGamepad.CurrentController.IsNoRumble, FallbackValue=Visible, Converter={converters1:InvertedBooleanToVisibilityConverter}}" />
				</StackPanel>
				<controls:ScaleWatchingControl
					Grid.Column="0"
					Grid.ColumnSpan="2" />
				<views:SVGContainerGrid
					x:Name="svgContainerGrid"
					Column="0"
					ColumnSpan="2">
					<Grid.RowDefinitions>
						<RowDefinition
							RowDefinition.Height="*" />
						<RowDefinition
							RowDefinition.Height="3*" />
						<RowDefinition
							RowDefinition.Height="*" />
					</Grid.RowDefinitions>
					<Grid.ColumnDefinitions>
						<ColumnDefinition
							ColumnDefinition.Width="*" />
						<ColumnDefinition
							ColumnDefinition.Width="3*" />
						<ColumnDefinition
							ColumnDefinition.Width="*" />
					</Grid.ColumnDefinitions>
					<views:SVGGamepadControlsRecolorer
						IsGyroScopeAvailiable="{Binding GamepadService.CurrentGamepad.IsGyroscopePresent}"
						SVGContainerGrid="{Binding ElementName=svgContainerGrid}" />
					<recolorableImages:RecolorableSVG
						Name="svgContainer"
						Grid.Row="1"
						Grid.Column="1"
						FrameworkElement.HorizontalAlignment="Stretch"
						FrameworkElement.VerticalAlignment="Stretch"
						Control.HorizontalContentAlignment="Center"
						Control.VerticalContentAlignment="Center"
						Stretch="Uniform"
						FrameworkElement.Style="{StaticResource MainWindowBigSVG}"
						Drawing="{Binding GamepadService.CurrentGamepadSVGUri}"
						UIElement.IsEnabled="{Binding GameProfilesService.CurrentGame.CurrentConfig.IsEditConfigMode}" />
					<view:SVGAnchorContainer
						Name="StickLowAnchor"
						Grid.RowSpan="3"
						Grid.ColumnSpan="3"
						SVGElementName="{Binding ConverterParameter='{x:Static enums:GamepadButton.BTN_RIGHT_THUMBSTICK_LOW}', Converter={converters1:ControllerButtonToAnchorNameConverter}}">
						<bindingAnnotation:GamepadBindingAnnotation
							x:Name="StickLowAnchorAnnotation"
							AnnotatedButton="BTN_RIGHT_THUMBSTICK_LOW"
							ShowAnnotationStickOnIsCurrentBinding="False"
							SVGAnnotationElementName="{Binding ConverterParameter='{x:Static enums:GamepadButton.BTN_RIGHT_THUMBSTICK_LOW}', Converter={converters1:ControllerButtonToAnchorNameConverter}}" />
					</view:SVGAnchorContainer>
					<view:SVGAnchorContainer
						Name="StickMedAnchor"
						Grid.RowSpan="3"
						Grid.ColumnSpan="3"
						SVGElementName="{Binding ConverterParameter='{x:Static enums:GamepadButton.BTN_RIGHT_THUMBSTICK_MED}', Converter={converters1:ControllerButtonToAnchorNameConverter}}">
						<bindingAnnotation:GamepadBindingAnnotation
							x:Name="StickMedAnchorAnnotation"
							AnnotatedButton="BTN_RIGHT_THUMBSTICK_MED"
							ShowAnnotationStickOnIsCurrentBinding="False"
							SVGAnnotationElementName="{Binding ConverterParameter='{x:Static enums:GamepadButton.BTN_RIGHT_THUMBSTICK_MED}', Converter={converters1:ControllerButtonToAnchorNameConverter}}" />
					</view:SVGAnchorContainer>
					<view:SVGAnchorContainer
						Name="StickHighAnchor"
						Grid.RowSpan="3"
						Grid.ColumnSpan="3"
						SVGElementName="{Binding ConverterParameter='{x:Static enums:GamepadButton.BTN_RIGHT_THUMBSTICK_HIGH}', Converter={converters1:ControllerButtonToAnchorNameConverter}}">
						<bindingAnnotation:GamepadBindingAnnotation
							x:Name="StickHighAnchorAnnotation"
							AnnotatedButton="BTN_RIGHT_THUMBSTICK_HIGH"
							ShowAnnotationStickOnIsCurrentBinding="False"
							SVGAnnotationElementName="{Binding ConverterParameter='{x:Static enums:GamepadButton.BTN_RIGHT_THUMBSTICK_HIGH}', Converter={converters1:ControllerButtonToAnchorNameConverter}}" />
					</view:SVGAnchorContainer>
					<view:SVGElementAttachedButton
						Name="StickZoneHigh"
						Grid.Row="1"
						Grid.Column="1"
						FrameworkElement.HorizontalAlignment="{TemplateBinding Control.HorizontalContentAlignment}"
						FrameworkElement.VerticalAlignment="{TemplateBinding Control.VerticalContentAlignment}"
						ButtonBase.CommandParameter="{x:Static enums:GamepadButton.BTN_RIGHT_THUMBSTICK_HIGH}"
						IsHitTestVisible="False"
						IsRecolorFill="False"
						ButtonBase.Command="{Binding GameProfilesService.ChangeCurrentBindingCommand}"
						HighlightBrush="{Binding GameProfilesService.CurrentGamepadBindingCollection.CollectionBrush, FallbackValue='{StaticResource CreamBrush}'}"
						SVGElementName="{Binding ConverterParameter='{x:Static enums:GamepadButton.BTN_RIGHT_THUMBSTICK_HIGH}', Converter={converters1:ControllerButtonToAnchorNameConverter}}" />
					<view:SVGElementAttachedButton
						Name="StickZoneMed"
						Grid.Row="1"
						Grid.Column="1"
						FrameworkElement.HorizontalAlignment="{TemplateBinding Control.HorizontalContentAlignment}"
						FrameworkElement.VerticalAlignment="{TemplateBinding Control.VerticalContentAlignment}"
						ButtonBase.CommandParameter="{x:Static enums:GamepadButton.BTN_RIGHT_THUMBSTICK_MED}"
						IsHitTestVisible="False"
						IsRecolorFill="False"
						ButtonBase.Command="{Binding GameProfilesService.ChangeCurrentBindingCommand}"
						HighlightBrush="{Binding GameProfilesService.CurrentGamepadBindingCollection.CollectionBrush, FallbackValue='{StaticResource CreamBrush}'}"
						SVGElementName="{Binding ConverterParameter='{x:Static enums:GamepadButton.BTN_RIGHT_THUMBSTICK_MED}', Converter={converters1:ControllerButtonToAnchorNameConverter}}" />
					<view:SVGElementAttachedButton
						Name="StickZoneLow"
						Grid.Row="1"
						Grid.Column="1"
						FrameworkElement.HorizontalAlignment="{TemplateBinding Control.HorizontalContentAlignment}"
						FrameworkElement.VerticalAlignment="{TemplateBinding Control.VerticalContentAlignment}"
						ButtonBase.CommandParameter="{x:Static enums:GamepadButton.BTN_RIGHT_THUMBSTICK_LOW}"
						IsHitTestVisible="False"
						IsRecolorFill="False"
						ButtonBase.Command="{Binding GameProfilesService.ChangeCurrentBindingCommand}"
						HighlightBrush="{Binding GameProfilesService.CurrentGamepadBindingCollection.CollectionBrush, FallbackValue='{StaticResource CreamBrush}'}"
						SVGElementName="{Binding ConverterParameter='{x:Static enums:GamepadButton.BTN_RIGHT_THUMBSTICK_LOW}', Converter={converters1:ControllerButtonToAnchorNameConverter}}" />
					<view:SVGAnchorContainer
						Name="TriggerLowAnchor"
						Grid.RowSpan="3"
						Grid.ColumnSpan="3"
						SVGElementName="RtriggerLow">
						<bindingAnnotation:GamepadBindingAnnotation
							x:Name="TriggerLowAnchorAnnotation"
							AnnotatedButton="BTN_RIGHT_TRIGGER_LOW"
							AnnotationRecolorBrush="{DynamicResource ZoneLowBrush}"
							SVGAnnotationElementName="RtriggerLowAnnotation"
							ShowAnnotationStick="False" />
					</view:SVGAnchorContainer>
					<view:SVGAnchorContainer
						Name="TriggerMedAnchor"
						Grid.RowSpan="3"
						Grid.ColumnSpan="3"
						SVGElementName="RtriggerMed">
						<bindingAnnotation:GamepadBindingAnnotation
							x:Name="TriggerMedAnchorAnnotation"
							AnnotatedButton="BTN_RIGHT_TRIGGER_MED"
							AnnotationRecolorBrush="{DynamicResource ZoneMedBrush}"
							SVGAnnotationElementName="RtriggerMedAnnotation"
							ShowAnnotationStick="False" />
					</view:SVGAnchorContainer>
					<view:SVGAnchorContainer
						Name="TriggerHighAnchor"
						Grid.RowSpan="3"
						Grid.ColumnSpan="3"
						SVGElementName="RtriggerHigh">
						<bindingAnnotation:GamepadBindingAnnotation
							x:Name="TriggerHighAnchorAnnotation"
							AnnotatedButton="BTN_RIGHT_TRIGGER_HIGH"
							AnnotationRecolorBrush="{DynamicResource ZoneHighBrush}"
							SVGAnnotationElementName="RtriggerHighAnnotation"
							ShowAnnotationStick="False" />
					</view:SVGAnchorContainer>
					<view:SVGElementAttachedButton
						Name="TriggerZoneHigh"
						Grid.Row="1"
						Grid.Column="1"
						FrameworkElement.HorizontalAlignment="{TemplateBinding Control.HorizontalContentAlignment}"
						FrameworkElement.VerticalAlignment="{TemplateBinding Control.VerticalContentAlignment}"
						ButtonBase.CommandParameter="{x:Static enums:GamepadButton.BTN_RIGHT_TRIGGER_HIGH}"
						HighlightBrush="{DynamicResource ZoneHighBrushHighlighted}"
						HighlightRecoloredOpacity="1"
						IsHitTestVisible="False"
						IsRecolorFill="True"
						RecolorBrush="{DynamicResource ZoneHighBrush}"
						SVGElementName="RtriggerZoneHigh"
						ButtonBase.Command="{Binding GameProfilesService.ChangeCurrentBindingCommand}" />
					<view:SVGElementAttachedButton
						Name="TriggerZoneMed"
						Grid.Row="1"
						Grid.Column="1"
						FrameworkElement.HorizontalAlignment="{TemplateBinding Control.HorizontalContentAlignment}"
						FrameworkElement.VerticalAlignment="{TemplateBinding Control.VerticalContentAlignment}"
						ButtonBase.CommandParameter="{x:Static enums:GamepadButton.BTN_RIGHT_TRIGGER_MED}"
						HighlightBrush="{DynamicResource ZoneMedBrushHighlighted}"
						HighlightRecoloredOpacity="1"
						IsHitTestVisible="False"
						IsRecolorFill="True"
						RecolorBrush="{DynamicResource ZoneMedBrush}"
						SVGElementName="RtriggerZoneMed"
						ButtonBase.Command="{Binding GameProfilesService.ChangeCurrentBindingCommand}" />
					<view:SVGElementAttachedButton
						Name="TriggerZoneLow"
						Grid.Row="1"
						Grid.Column="1"
						FrameworkElement.HorizontalAlignment="{TemplateBinding Control.HorizontalContentAlignment}"
						FrameworkElement.VerticalAlignment="{TemplateBinding Control.VerticalContentAlignment}"
						ButtonBase.CommandParameter="{x:Static enums:GamepadButton.BTN_RIGHT_TRIGGER_LOW}"
						HighlightBrush="{DynamicResource ZoneLowBrushHighlighted}"
						HighlightRecoloredOpacity="1"
						IsHitTestVisible="False"
						IsRecolorFill="True"
						RecolorBrush="{DynamicResource ZoneLowBrush}"
						SVGElementName="RtriggerZoneLow"
						ButtonBase.Command="{Binding GameProfilesService.ChangeCurrentBindingCommand}" />
					<view:SVGAnchorContainer
						Name="BumperLowAnchor"
						Grid.RowSpan="3"
						Grid.ColumnSpan="3"
						SVGElementName="LButtonsLow">
						<bindingAnnotation:GamepadBindingAnnotation
							x:Name="BumperLowAnchorAnnotation"
							AnnotatedButton="BTN_LEFT_BUMPER_LOW"
							AnnotationRecolorBrush="{DynamicResource ZoneLowBrush}"
							SVGAnnotationElementName="LButtonsLowAnnotation"
							ShowAnnotationStick="False" />
					</view:SVGAnchorContainer>
					<view:SVGAnchorContainer
						Name="BumperMedAnchor"
						Grid.RowSpan="3"
						Grid.ColumnSpan="3"
						SVGElementName="LButtonsMed">
						<bindingAnnotation:GamepadBindingAnnotation
							x:Name="BumperMedAnchorAnnotation"
							AnnotatedButton="BTN_LEFT_BUMPER_MED"
							AnnotationRecolorBrush="{DynamicResource ZoneMedBrush}"
							SVGAnnotationElementName="LButtonsMedAnnotation"
							ShowAnnotationStick="False" />
					</view:SVGAnchorContainer>
					<view:SVGAnchorContainer
						Name="BumperHighAnchor"
						Grid.RowSpan="3"
						Grid.ColumnSpan="3"
						SVGElementName="LButtonsHigh">
						<bindingAnnotation:GamepadBindingAnnotation
							x:Name="BumperHighAnchorAnnotation"
							AnnotatedButton="BTN_LEFT_BUMPER_HIGH"
							AnnotationRecolorBrush="{DynamicResource ZoneHighBrush}"
							SVGAnnotationElementName="LButtonsHighAnnotation"
							ShowAnnotationStick="False" />
					</view:SVGAnchorContainer>
					<view:SVGElementAttachedButton
						Name="BumperCurrentButton"
						Grid.Row="1"
						Grid.Column="1"
						FrameworkElement.HorizontalAlignment="{TemplateBinding Control.HorizontalContentAlignment}"
						FrameworkElement.VerticalAlignment="{TemplateBinding Control.VerticalContentAlignment}"
						IsHitTestVisible="False"
						SVGElementName=""
						RecolorBrush="{Binding GameProfilesService.CurrentGamepadBindingCollection.CollectionBrush, FallbackValue='{StaticResource CreamBrush}', ConverterParameter=0.3, Converter={dsConverters:SolidColorBrushSetOpacityViaParamConvertor}}" />
					<view:SVGElementAttachedButton
						Name="BumperZoneHigh"
						Grid.Row="1"
						Grid.Column="1"
						FrameworkElement.HorizontalAlignment="{TemplateBinding Control.HorizontalContentAlignment}"
						FrameworkElement.VerticalAlignment="{TemplateBinding Control.VerticalContentAlignment}"
						ButtonBase.CommandParameter="{x:Static enums:GamepadButton.BTN_LEFT_BUMPER_HIGH}"
						HighlightBrush="{DynamicResource Shift1BrushPressed}"
						HighlightRecoloredOpacity="1"
						IsHitTestVisible="False"
						IsRecolorFill="True"
						RecolorBrush="{DynamicResource Shift1Brush}"
						SVGElementName="LButtonsZoneHigh"
						ButtonBase.Command="{Binding GameProfilesService.ChangeCurrentBindingCommand}" />
					<view:SVGElementAttachedButton
						Name="BumperZoneMed"
						Grid.Row="1"
						Grid.Column="1"
						FrameworkElement.HorizontalAlignment="{TemplateBinding Control.HorizontalContentAlignment}"
						FrameworkElement.VerticalAlignment="{TemplateBinding Control.VerticalContentAlignment}"
						ButtonBase.CommandParameter="{x:Static enums:GamepadButton.BTN_LEFT_BUMPER_MED}"
						HighlightBrush="{DynamicResource PressedBorderBrush}"
						HighlightRecoloredOpacity="1"
						IsHitTestVisible="False"
						IsRecolorFill="True"
						RecolorBrush="{DynamicResource CreamBrush}"
						SVGElementName="LButtonsZoneMed"
						ButtonBase.Command="{Binding GameProfilesService.ChangeCurrentBindingCommand}" />
					<view:SVGElementAttachedButton
						Name="BumperZoneLow"
						Grid.Row="1"
						Grid.Column="1"
						FrameworkElement.HorizontalAlignment="{TemplateBinding Control.HorizontalContentAlignment}"
						FrameworkElement.VerticalAlignment="{TemplateBinding Control.VerticalContentAlignment}"
						ButtonBase.CommandParameter="{x:Static enums:GamepadButton.BTN_LEFT_BUMPER_LOW}"
						HighlightBrush="{DynamicResource Shift2BrushPressed}"
						HighlightRecoloredOpacity="1"
						IsHitTestVisible="False"
						IsRecolorFill="True"
						RecolorBrush="{DynamicResource Shift2Brush}"
						SVGElementName="LButtonsZoneLow"
						ButtonBase.Command="{Binding GameProfilesService.ChangeCurrentBindingCommand}" />
					<view:SVGElementAttachedButton
						Grid.Row="1"
						Grid.Column="1"
						FrameworkElement.HorizontalAlignment="{TemplateBinding Control.HorizontalContentAlignment}"
						FrameworkElement.VerticalAlignment="{TemplateBinding Control.VerticalContentAlignment}"
						AutomationProperties.AutomationId="btnWizard"
						HighlightRecoloredOpacity="1"
						SVGElementName="WizardButton"

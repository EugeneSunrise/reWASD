<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:controls="clr-namespace:DiscSoft.NET.Common.View.Controls;assembly=DiscSoft.NET.Common">
	<Style
		x:Key="BorderlessWatermarkTextBox"
		BasedOn="{StaticResource {x:Type controls:WaterMarkTextBox}}"
		TargetType="{x:Type controls:WaterMarkTextBox}">
		<Setter
			Property="Control.BorderThickness"
			Value="0" />
		<Setter
			Property="Control.Background"
			Value="#00FFFFFF" />
		<Setter
			Property="Control.Foreground"
			Value="{DynamicResource CreamBrush}" />
		<Setter
			Property="TextBoxBase.CaretBrush"
			Value="{DynamicResource CreamBrush}" />
	</Style>
</ResourceDictionary>
